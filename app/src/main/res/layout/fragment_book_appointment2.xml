<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Book_appointment2">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#E6F4FA">
        <ImageView
            android:layout_width="200sp"
            android:layout_height="200sp"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:background="@drawable/abcdd"></ImageView>
        <Button
            android:layout_width="300dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="Select a doctor"
            android:id="@+id/butn_book"
            android:textAllCaps="false"
            android:background="@drawable/rounde_button"></Button>
        <CalendarView
            android:id="@+id/calender_id"
            android:layout_width="match_parent"
            android:overScrollMode="always"
            android:layout_marginTop="30sp"
            android:layout_height="300dp"
            android:background="#C7E4FF"></CalendarView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="30sp"
            android:layout_marginRight="30sp"
            android:layout_gravity="center"
            android:id="@+id/calender_view"
            ></TextView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_marginTop="15dp"
            android:hint="write here your problem..."
            android:background="#FCF5F5"
            android:textColorHint="#8A8175"/>
        <Button
            android:id="@+id/book_appoint"
            android:layout_width="300sp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:background="@drawable/rounde_button"
            android:layout_marginTop="50sp"
            android:layout_marginBottom="10sp"
            android:text="Book Appointment"
            android:textAllCaps="false"></Button>


    </LinearLayout>
        ></ScrollView>



</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20sp"
    android:orientation="vertical"
    android:background="#0E394B"
    tools:context=".User_signin">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="35sp"
            android:textColor="#D5AF46"
            android:text=""
            android:fontFamily="cursive"
            android:layout_marginTop="45dp" />

        <TextView
            android:layout_marginTop="40sp"
            android:layout_width="match_parent"
            android:textColor="#FFEB3B"
            android:textSize="20dp"
            android:text="@string/hi_there_this_page_is_your_medical_healthcare_sign_in_page_here_you_have_now_permission_to_access_the_hospital_documentation_and_you_can_also_able_to_see_our_hospital_daily_report_according_to_your_access"
            android:layout_height="200sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#F09595"
            android:textSize="15sp"
            android:text="you are allowed to see the hospital data'click below'"
            android:layout_marginBottom="15sp"></TextView>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:id="@+id/signin_btn1"
            android:text="hospital data"
            android:background="@drawable/rounde_button"
            android:textSize="22dp"
            android:textColor="#ffff"></Button>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/signin_btn2"
            android:text="Move to main screen"
            android:layout_marginTop="35dp"
            android:background="@drawable/rounde_button"
            android:textSize="18dp"
            android:textColor="#ffff"></Button>
        <Button
            android:id="@+id/button_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50sp"
            android:text="Logout"
            android:textColor="#ffff"
            android:background="@drawable/rounde_button"
            android:textSize="30sp"
            android:textAllCaps="false">

        </Button>
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/progress_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:indeterminateTint="#D8AF35"

            >

        </ProgressBar>


    </LinearLayout>
</ScrollView>




</LinearLayout>